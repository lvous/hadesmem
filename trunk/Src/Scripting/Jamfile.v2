# Scripting/Jamfile.v2

project 
  : 
    requirements 
    <toolset>gcc:<warnings>off 
    <toolset>msvc:<warnings>all 
  ;

import python 
  ;

if ![python.configured]
{
  ECHO 
    "Notice: No Python configured in user-config.jam." 
    "Will use default configuration."
    ;
    
  using python
    ;
}

project
  : 
    requirements 
    <library>/boost//python/<link>static 
    <library>/boost//program_options/<link>static 
  ;

exe MemSandbox 
  : 
    [ glob MemSandbox/*.cpp ] 
    /Memory//Memory 
  : 
    <link>static 
  : 
  : 
    <include>"." 
  ;

python-extension PyHadesMem 
  : 
    [ glob PyHadesMem/*.cpp ] 
    /Memory//Memory 
  : 
    <link>shared 
  ;
